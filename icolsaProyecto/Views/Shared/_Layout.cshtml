
@{
    var userName = Context.Session.GetString("UsuarioNombre");
    var userRol = Context.Session.GetString("UsuarioRol");
    var isAuthenticated = !string.IsNullOrEmpty(userName);
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Icolsa</title>

    <!-- Bootstrap + Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Tu CSS base -->
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        /* Mantengo tu estilo del navbar pero con pequeñas mejoras */
        .navbar-custom {
            background: linear-gradient(90deg, #6a11cb, #2575fc);
            padding: 14px 20px;
            box-shadow: 0 4px 14px rgba(0,0,0,0.15);
        }

        .navbar-brand { color: #fff !important; font-weight:600; letter-spacing:0.3px; font-size:1.25rem; }

        .nav-link { color: #fff !important; font-weight:500; border-radius:8px; padding:8px 14px; transition: background .25s, transform .25s; }
        .nav-link:hover { background: rgba(255,255,255,0.12); transform: translateY(-2px); }

        .btn-login { background:#fff; color:#2575fc; font-weight:600; border-radius:8px; padding:7px 18px; }
        .btn-login:hover { background:#eef0ff; }

        /* Asegurar que el icono del toggler se vea blanco sobre el gradiente */
        .navbar-toggler { border: none; }
        .navbar-toggler-icon {
            display: inline-block;
            width: 1.5em;
            height: 1.5em;
            vertical-align: middle;
            background-size: 100% 100%;
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,255,255,0.95)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        footer { background-color: #fff; border-top:1px solid #e0e0e0; text-align:center; padding:18px 0; color:#666; margin-top:50px; }
        main { padding-top: 35px; padding-bottom:60px; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-custom" aria-label="Barra de navegación principal">
        <div class="container-fluid">
            <a class="navbar-brand d-flex align-items-center gap-2" href="@Url.Action("Index","Home")">
                <i class="bi bi-grid"></i> Icolsa
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navMenu" aria-controls="navMenu" aria-expanded="false" aria-label="Abrir menú">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navMenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" title="Inicio">
                            <i class="bi bi-house-door"></i> Inicio
                        </a>
                    </li>

                    
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Acerca" title="Acerca de Icolsa">
                            <i class="bi bi-info-circle"></i> Acerca
                        </a>
                    </li>

                    @if (!isAuthenticated)
                    {
                        <li class="nav-item ms-2">
                            <a class="btn btn-login" asp-controller="Usuario" asp-action="Login" title="Iniciar sesión">
                                <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar
                            </a>
                        </li>
                    }
                    else
                    {
                        <!-- Mantengo el menú de perfil pero sin opciones administrativas visibles -->
                        <li class="nav-item dropdown ms-3">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" data-bs-toggle="dropdown" id="profileMenu" aria-expanded="false">
                                <i class="bi bi-person-circle me-1"></i> @userName
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="profileMenu">
                                <li class="dropdown-item-text px-3 small"><strong>Rol:</strong> @userRol</li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Perfil">
                                    <i class="bi bi-person-badge me-1"></i> Mi Perfil
                                </a></li>
                                <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Logout">
                                    <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
                                </a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container">
        @RenderBody()
    </main>

    <footer>
        © @DateTime.Now.Year Icolsa — Todos los derechos reservados.
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
