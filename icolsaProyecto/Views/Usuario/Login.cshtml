@model icolsaProyecto.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesión";
    ViewData["HideSidebar"] = true;
    
}

<div class="min-vh-100 d-flex align-items-center justify-content-center"
     style="background: linear-gradient(135deg, #8e2de2, #4a00e0);">

    <div class="card border-0 shadow-2xl rounded-5 overflow-hidden"
         style="max-width: 920px; width: 100%; backdrop-filter: blur(12px); background: rgba(255, 255, 255, 0.15); border: 1px solid rgba(255, 255, 255, 0.25);">

        <div class="row g-0">

            <!-- Columna de bienvenida -->
            <div class="col-md-6 text-white d-flex flex-column justify-content-center align-items-center p-5"
                 style="background: linear-gradient(135deg, #6f42c1, #b968e2);">
                <img src="~/images/login-illustration.jpg" class="img-fluid mb-4" alt="Bienvenida"
                     style="max-height: 260px; filter: drop-shadow(0 0 8px rgba(0,0,0,0.3));" />
                <h2 class="fw-bold mb-2 text-center">¡Bienvenido de vuelta!</h2>
                <p class="text-center text-light opacity-75 mb-0">Ingresa tus credenciales para continuar.</p>
            </div>

            <!-- Columna del formulario -->
            <div class="col-md-6 bg-white p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock-fill" style="font-size: 2.5rem; color: #6f42c1;"></i>
                    <h3 class="mt-3 fw-bold" style="color:#4a00e0;">Iniciar Sesión</h3>
                </div>

                <form asp-action="Login" asp-controller="Usuario" method="post" id="loginForm" novalidate autocomplete="off">
                    @Html.AntiForgeryToken()

                    <!-- Correo -->
                    <div class="form-group mb-4">
                        <label asp-for="Correo_Usuario" class="form-label fw-semibold">Correo electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-envelope text-muted"></i></span>
                            <input asp-for="Correo_Usuario" class="form-control" placeholder="nombre@ejemplo.com" />
                        </div>
                        <span asp-validation-for="Correo_Usuario" class="text-danger small d-block mt-1"></span>
                    </div>

                    <!-- Contraseña -->
                    <div class="form-group mb-4">
                        <label asp-for="Contrasena_Usuario" class="form-label fw-semibold">Contraseña</label>
                        <div class="input-group position-relative">
                            <span class="input-group-text bg-light"><i class="bi bi-lock text-muted"></i></span>
                            <input asp-for="Contrasena_Usuario" type="password" id="Contrasena_Usuario" class="form-control" placeholder="Tu contraseña" />
                            <button type="button" class="btn btn-outline-secondary" id="togglePass" title="Mostrar/Ocultar contraseña">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Contrasena_Usuario" class="text-danger small d-block mt-1"></span>

                        <!-- Barra de fuerza de contraseña -->
                        <div class="progress mt-2" style="height: 5px;">
                            <div id="passStrength" class="progress-bar bg-danger" style="width: 0%;"></div>
                        </div>
                        <small id="strengthText" class="form-text text-muted"></small>
                    </div>

                    <div class="d-flex justify-content-end mb-3">
                        <small>¿Olvidaste tu contraseña?
                            <a asp-controller="Usuario" asp-action="ForgotPassword" class="text-primary fw-semibold text-decoration-none">Recuperarla</a>
                        </small>
                    </div>

                    <button type="submit"
                            class="btn w-100 rounded-pill py-2 fw-semibold text-white"
                            style="background: linear-gradient(135deg, #6f42c1, #b968e2); border: none; box-shadow: 0 4px 10px rgba(0,0,0,0.15); transition: transform 0.2s;">
                        Ingresar
                    </button>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                    }

                    <div class="text-center mt-4">
                        <small>¿No tienes una cuenta?
                            <a asp-controller="Usuario" asp-action="Register" class="text-primary fw-semibold text-decoration-none">Regístrate</a>
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- =================================== -->
<!-- ESTILOS PERSONALIZADOS -->
<!-- =================================== -->
<style>
    body {
        background: linear-gradient(135deg, #8e2de2, #4a00e0);
    }

    .card {
        animation: fadeIn 0.6s ease-in-out;
    }

    .btn:hover {
        transform: scale(1.03);
    }

    .input-group-text {
        border: none;
        border-right: 1px solid #e0e0e0;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(111, 66, 193, 0.25);
    }

    #togglePass {
        border-left: none;
        background: #fff;
        transition: all 0.2s ease;
    }

    #togglePass:hover {
        background-color: #f8f9fa;
    }


    }
</style>

<!-- =================================== -->
<!-- SCRIPTS -->
<!-- =================================== -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Mostrar/Ocultar contraseña
        document.getElementById("togglePass").addEventListener("click", function () {
            const input = document.getElementById("Contrasena_Usuario");
            const icon = this.querySelector("i");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        });

        // Indicador de fuerza de contraseña (visual)
        const passInput = document.getElementById("Contrasena_Usuario");
        const strengthBar = document.getElementById("passStrength");
        const strengthText = document.getElementById("strengthText");

        passInput.addEventListener("input", () => {
            const value = passInput.value;
            let strength = 0;

            if (value.length > 5) strength++;
            if (/[A-Z]/.test(value)) strength++;
            if (/[0-9]/.test(value)) strength++;
            if (/[^A-Za-z0-9]/.test(value)) strength++;

            switch (strength) {
                case 0:
                    strengthBar.style.width = "0%";
                    strengthBar.className = "progress-bar bg-danger";
                    strengthText.textContent = "";
                    break;
                case 1:
                    strengthBar.style.width = "25%";
                    strengthBar.className = "progress-bar bg-danger";
                    strengthText.textContent = "Débil";
                    break;
                case 2:
                    strengthBar.style.width = "50%";
                    strengthBar.className = "progress-bar bg-warning";
                    strengthText.textContent = "Media";
                    break;
                case 3:
                    strengthBar.style.width = "75%";
                    strengthBar.className = "progress-bar bg-info";
                    strengthText.textContent = "Buena";
                    break;
                case 4:
                    strengthBar.style.width = "100%";
                    strengthBar.className = "progress-bar bg-success";
                    strengthText.textContent = "Fuerte";
                    break;
            }
        });
    </script>
}
