@model icolsaProyecto.Models.Usuario

@{
    ViewData["Title"] = "Recuperar Contraseña";
    ViewData["HideSidebar"] = true;
}

<div class="min-vh-100 d-flex align-items-center justify-content-center"
     style="background: linear-gradient(135deg, #8e2de2, #4a00e0);">

    <div class="card border-0 shadow-2xl rounded-5 overflow-hidden"
         style="max-width: 960px; width: 100%; backdrop-filter: blur(12px); background: rgba(255, 255, 255, 0.15); border: 1px solid rgba(255, 255, 255, 0.25);">

        <div class="row g-0">

            <!-- Columna de bienvenida -->
            <div class="col-md-6 text-white d-flex flex-column justify-content-center align-items-center p-5"
                 style="background: linear-gradient(135deg, #6f42c1, #b968e2);">
                <h2 class="fw-bold mb-2 text-center">¿Olvidaste tu contraseña?</h2>
                <p class="text-center text-light opacity-75 mb-0">No te preocupes, ingresa tu correo y crea una nueva contraseña segura.</p>
            </div>

            <!-- Columna del formulario -->
            <div class="col-md-6 bg-white p-5">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-lock-fill" style="font-size: 2.5rem; color: #6f42c1;"></i>
                    <h3 class="mt-3 fw-bold" style="color:#4a00e0;">Recuperar Contraseña</h3>
                </div>

                <form asp-action="ForgotPassword" asp-controller="Usuario" method="post" novalidate autocomplete="off">
                    @Html.AntiForgeryToken()

                    <!-- Correo -->
                    <div class="form-group mb-3">
                        <label for="correo" class="form-label fw-semibold">Correo electrónico</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-envelope text-muted"></i></span>
                            <input type="email" id="correo" name="correo" class="form-control" placeholder="nombre@ejemplo.com" />
                        </div>
                        <span class="text-danger small d-block mt-1"></span>
                    </div>

                    <!-- Nueva Contraseña -->
                    <div class="form-group mb-3">
                        <label for="nueva" class="form-label fw-semibold">Nueva Contraseña</label>
                        <div class="input-group position-relative">
                            <span class="input-group-text bg-light"><i class="bi bi-lock text-muted"></i></span>
                            <input type="password" id="nueva" name="nueva" class="form-control" placeholder="Crea una nueva contraseña" />
                            <button type="button" class="btn btn-outline-secondary" id="toggleNewPass" title="Mostrar/Ocultar contraseña">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span class="text-danger small d-block mt-1"></span>

                        <!-- Confirmar Contraseña -->
                        <div class="form-group mt-3">
                            <label for="confirmar" class="form-label fw-semibold">Confirmar Contraseña</label>
                            <div class="input-group position-relative">
                                <span class="input-group-text bg-light"><i class="bi bi-lock text-muted"></i></span>
                                <input type="password" id="confirmar" name="confirmar" class="form-control" placeholder="Repite tu contraseña" />
                                <button type="button" class="btn btn-outline-secondary" id="toggleConfirmPass" title="Mostrar/Ocultar contraseña">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- Barra de fuerza -->
                        <div class="progress mt-3" style="height: 5px;">
                            <div id="passStrength" class="progress-bar bg-danger" style="width: 0%;"></div>
                        </div>
                        <small id="strengthText" class="form-text text-muted"></small>
                    </div>

                    <button type="submit"
                            class="btn w-100 rounded-pill py-2 fw-semibold text-white mt-3"
                            style="background: linear-gradient(135deg, #6f42c1, #b968e2); border: none; box-shadow: 0 4px 10px rgba(0,0,0,0.15); transition: transform 0.2s;">
                        Restablecer Contraseña
                    </button>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger mt-3 text-center">@ViewBag.Error</div>
                    }

                    <div class="text-center mt-4">
                        <small>¿Recordaste tu contraseña?
                            <a asp-controller="Usuario" asp-action="Login" class="text-primary fw-semibold text-decoration-none">Inicia sesión</a>
                        </small>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- ============================= -->
<!-- ESTILOS PERSONALIZADOS -->
<!-- ============================= -->
<style>
    body {
        background: linear-gradient(135deg, #8e2de2, #4a00e0);
    }

    .card {
        animation: fadeIn 0.6s ease-in-out;
    }

    .btn:hover {
        transform: scale(1.03);
    }

    .input-group-text {
        border: none;
        border-right: 1px solid #e0e0e0;
    }

    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(111, 66, 193, 0.25);
    }

    #toggleNewPass, #toggleConfirmPass {
        border-left: none;
        background: #fff;
        transition: all 0.2s ease;
    }

    #toggleNewPass:hover, #toggleConfirmPass:hover {
        background-color: #f8f9fa;
    }
</style>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/validacionRecuperacion.js"></script>

    <script>
        // Mostrar/Ocultar nueva contraseña
        document.getElementById("toggleNewPass").addEventListener("click", function () {
            const input = document.getElementById("nueva");
            const icon = this.querySelector("i");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        });

        // Mostrar/Ocultar confirmación de contraseña
        document.getElementById("toggleConfirmPass").addEventListener("click", function () {
            const input = document.getElementById("confirmar");
            const icon = this.querySelector("i");

            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        });
    </script>
}
