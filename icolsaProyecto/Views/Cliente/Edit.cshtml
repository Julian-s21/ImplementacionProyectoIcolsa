@model icolsaProyecto.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
    var userRol = Context.Session.GetString("UsuarioRol");
    Layout = userRol == "Administrativo" || userRol == "Secretario" || userRol == "Empleado"
        ? "~/Views/Shared/_LayoutAdministrativo.cshtml"
        : "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <!-- ENCABEZADO -->
    <div class="bg-white/80 backdrop-blur-md shadow-lg rounded-4 border border-gray-100 p-4 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-1 text-gradient"
                    style="background: linear-gradient(90deg, #6a11cb, #2575fc);
                           -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                    Editar Cliente
                </h2>
                <p class="text-muted mb-0">Modifica los datos del cliente y guarda los cambios.</p>
            </div>
            <a asp-action="Index" class="btn btn-outline-primary rounded-pill fw-semibold shadow-sm">
                <i class="bi bi-arrow-left me-1"></i> Volver
            </a>
        </div>
    </div>

    <!-- FORMULARIO -->
    <div class="bg-white p-5 shadow-lg rounded-4 border-0">
        <form asp-action="Edit" method="post" id="formClienteEdit" autocomplete="off" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="IDCliente" />

            <div class="row g-4">
                <!-- Nombre -->
                <div class="col-md-6">
                    <label asp-for="Nombre_Cliente" class="form-label fw-semibold">Nombre</label>
                    <input asp-for="Nombre_Cliente"
                           class="form-control border-0 shadow-sm rounded-3 focus-ring"
                           placeholder="Ej. Juan" maxlength="50" />
                    <span class="invalid-feedback d-block small"></span>
                </div>

                <!-- Apellido -->
                <div class="col-md-6">
                    <label asp-for="Apellido_Cliente" class="form-label fw-semibold">Apellido</label>
                    <input asp-for="Apellido_Cliente"
                           class="form-control border-0 shadow-sm rounded-3 focus-ring"
                           placeholder="Ej. Pérez" maxlength="50" />
                    <span class="invalid-feedback d-block small"></span>
                </div>

                <!-- Dirección -->
                <div class="col-md-6">
                    <label asp-for="Direccion_Cliente" class="form-label fw-semibold">Dirección</label>
                    <input asp-for="Direccion_Cliente"
                           class="form-control border-0 shadow-sm rounded-3 focus-ring"
                           placeholder="Ej. 5a avenida zona 1, San Marcos" maxlength="150" />
                    <span class="invalid-feedback d-block small"></span>
                </div>

                <!-- Teléfono -->
                <div class="col-md-6">
                    <label asp-for="Telefono_Cliente" class="form-label fw-semibold">Teléfono</label>
                    <input asp-for="Telefono_Cliente"
                           class="form-control border-0 shadow-sm rounded-3 focus-ring"
                           placeholder="Ej. 50212345678" maxlength="15" />
                    <span class="invalid-feedback d-block small"></span>
                </div>

                <!-- Correo -->
                <div class="col-md-6">
                    <label asp-for="Correo_Cliente" class="form-label fw-semibold">Correo Electrónico</label>
                    <input asp-for="Correo_Cliente"
                           class="form-control border-0 shadow-sm rounded-3 focus-ring"
                           placeholder="Ej. correo@ejemplo.com"
                           type="email" maxlength="100" />
                    <span class="invalid-feedback d-block small"></span>
                </div>

                <!-- NIT -->
                <div class="col-md-6">
                    <label asp-for="NIT_Cliente" class="form-label fw-semibold">NIT</label>
                    <input asp-for="NIT_Cliente"
                           class="form-control border-0 shadow-sm rounded-3 focus-ring"
                           placeholder="Ej. 1234567-8" maxlength="20" />
                    <span class="invalid-feedback d-block small"></span>
                </div>
            </div>

            <!-- Resumen de errores -->
            <div id="errorSummary" class="alert alert-danger mt-4 d-none rounded-4 shadow-sm">
                <h6 class="fw-bold"><i class="bi bi-exclamation-triangle me-2"></i>Errores encontrados:</h6>
                <ul class="mb-0"></ul>
            </div>

            <!-- BOTONES -->
            <div class="text-center mt-5">
                <button type="submit"
                        class="btn btn-gradient px-5 py-2 rounded-pill text-white shadow-sm fw-semibold ripple"
                        style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
                    <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                </button>
                <button type="button" id="btnCancelar"
                        class="btn btn-outline-secondary px-5 py-2 rounded-pill ms-2 shadow-sm ripple">
                    <i class="bi bi-x-circle me-2"></i>Cancelar
                </button>
            </div>
        </form>
    </div>
</div>

<!-- MODAL CONFIRMACIÓN -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header border-0 text-white"
                 style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
                <h5 class="modal-title fw-semibold"><i class="bi bi-check2-circle me-2"></i>Confirmación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="mb-3 fs-5">Los cambios del cliente se han guardado exitosamente.</p>
                <button class="btn btn-gradient text-white px-4 rounded-pill" data-bs-dismiss="modal"
                        style="background: linear-gradient(90deg, #6a11cb, #2575fc);">
                    Aceptar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- MODAL CANCELAR -->
<div class="modal fade" id="cancelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-4 border-0 shadow">
            <div class="modal-header border-0 bg-secondary text-white">
                <h5 class="modal-title fw-semibold"><i class="bi bi-x-circle me-2"></i>Cancelar edición</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <p class="mb-3 fs-5">¿Seguro que deseas cancelar la edición?</p>
                <a asp-action="Index" class="btn btn-danger px-4 rounded-pill text-white">Sí, cancelar</a>
                <button class="btn btn-outline-secondary px-4 rounded-pill ms-2" data-bs-dismiss="modal">No, volver</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("formClienteEdit");
            const errorSummary = document.getElementById("errorSummary");
            const confirmModal = document.getElementById("confirmModal");
            const cancelModal = document.getElementById("cancelModal");
            const btnCancelar = document.getElementById("btnCancelar");

            function showError(element, message) {
                element.classList.remove("is-valid");
                element.classList.add("is-invalid");
                let fb = element.parentElement.querySelector(".invalid-feedback");
                if (!fb) {
                    fb = document.createElement("div");
                    fb.classList.add("invalid-feedback", "d-block", "small");
                    element.parentElement.appendChild(fb);
                }
                fb.textContent = message;
            }

            function clearError(element) {
                element.classList.remove("is-invalid");
                element.classList.add("is-valid");
                const fb = element.parentElement.querySelector(".invalid-feedback");
                if (fb) fb.textContent = "";
            }

            form.addEventListener("submit", function (e) {
                e.preventDefault();
                let errores = [];

                const nombre = document.getElementById("Nombre_Cliente");
                const apellido = document.getElementById("Apellido_Cliente");
                const telefono = document.getElementById("Telefono_Cliente");
                const correo = document.getElementById("Correo_Cliente");
                const nit = document.getElementById("NIT_Cliente");

                if (!nombre.value.trim()) { errores.push("Debe ingresar el nombre."); showError(nombre, "Debe ingresar el nombre."); } else clearError(nombre);
                if (!apellido.value.trim()) { errores.push("Debe ingresar el apellido."); showError(apellido, "Debe ingresar el apellido."); } else clearError(apellido);
                if (!telefono.value.trim() || !/^[0-9]{8,15}$/.test(telefono.value)) { errores.push("Debe ingresar un teléfono válido."); showError(telefono, "Debe ingresar un teléfono válido."); } else clearError(telefono);
        
                if (correo.value.trim() && !/^[^@@\s]+@@[^@@\s]+\.[^@@\s]+$/.test(correo.value)) { errores.push("Ingrese un correo válido."); showError(correo, "Ingrese un correo válido."); } else clearError(correo);
                if (nit.value.trim() && !/^[0-9\-]+$/.test(nit.value)) { errores.push("Ingrese un NIT válido."); showError(nit, "Ingrese un NIT válido."); } else clearError(nit);

                if (errores.length > 0) {
        errorSummary.classList.remove("d-none");
        errorSummary.innerHTML =
            '<strong>Se encontraron los siguientes errores:</strong>' +
            '<ul class="mb-0 mt-2">' +
            errores.map(function (e) { return '<li>' + e + '</li>'; }).join('') +
            '</ul>';
        window.scrollTo({ top: 0, behavior: "smooth" });
        return;
                }

                  errorSummary.classList.add("d-none");

    // ✅ Enviar el formulario al servidor
    form.submit();
            });

            
        });
    </script>
}
